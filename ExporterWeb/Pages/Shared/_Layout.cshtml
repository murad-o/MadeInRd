@using Microsoft.AspNetCore.Identity
@inject CommonLocalizationService Localizer
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var isUserSignedIn = SignInManager.IsSignedIn(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/fonts/Golos text/golostext.css" />
    <link rel="stylesheet" href="~/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="~/css/slimselect.min.css" />
    <link rel="stylesheet" href="~/css/template.css" />
</head> 
<body>
    
    <div class="wrapper">
        <header class="header">
            <div class="upper-header">
                <div class="container">
                    <div class="upper-header__inner-block">
                        <div class="upper-header__logo">
                            <a class="main-page-link" asp-page="/Index">MADE IN R<span class="main-page-link__rd">D.</span></a>
                        </div>
                        <div class="big-upper-header big-upper-header_position">
                            <div class="site-info site-info_header-position">
                                @Localizer["Foreign economic activity"]
                                <div class="site-info__republic">@Localizer["of the republic of Dagestan"]</div>
                            </div>
                            <div class="big-main-search">
                                <form>
                                    <div class="big-main-search__body">
                                        <input class="main-search-input big-main-search__input" type="text" name="search" placeholder="@Localizer["Search on the site"]" />
                                        <button class="main-search-btn big-main-search__btn" type="submit">
                                            <svg class="big-main-search__icon" viewBox="0 0 24 24"><use xlink:href="/img/sprite.svg#main-search"></use></svg>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="big-main-search-toggler">
                                <svg class="main-page-icon big-main-search-toggler__icon" viewBox="0 0 24 24">
                                    <use xlink:href="/img/sprite.svg#main-search"></use>
                                </svg>
                            </div>
                            <div class="feedback feedback_header-position">
                                <a class="feedback__link" href="#">
                                    <svg class="main-page-icon" viewBox="0 0 24 24">
                                        <use xlink:href="/img/sprite.svg#feedback"></use>
                                    </svg>
                                </a>
                            </div>
                            <div class="personal-area personal-area_header-position">
                                <a data-fancybox data-src="#modalReg" href="javascript:;" class="personal-area__link">@Localizer["Account"]</a>
                                <!--<a class="personal-area__link" asp-area="Identity" asp-page="/Account/Manage/Index">@Localizer["Account"]</a>-->
                            </div>
                            <partial name="_LanguagePartial" />
                        </div>
                        <div class="upper-header__burger">
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="big-menu">
                <div class="container">
                    <ul class="big-menu__list">
                        <li>
                            <a class="main-menu-link big-menu__link" asp-page="/Admin/FieldsOfActivity/Index">@Localizer["Industries"]</a>
                        </li>
                        <li>
                            <a class="main-menu-link big-menu__link" asp-page="/Exporters/Index">@Localizer["Exporters"]</a>
                        </li>
                        <li>
                            <a class="main-menu-link big-menu__link" asp-page="/Products/Index">@Localizer["Products & Services"]</a>
                        </li>
                        <li>
                            <a class="main-menu-link big-menu__link" asp-page="/Events/Index">@Localizer["Events"]</a>
                        </li>
                        <li class="big-menu__popup-body">
                            <a class="big-menu__link big-menu__popup-toggler">@Localizer["Information"]</a>
                            <ul class="big-popup-menu">
                                <li>
                                    <a class="big-menu__link big-popup-menu__link" asp-page="/Exporters/Index">@Localizer["About portal"]</a>
                                </li>
                                <li>
                                    <a class="big-menu__link big-popup-menu__link" asp-page="/Events/Index">@Localizer["About region"]</a>
                                </li>
                                <li>
                                    <a class="big-menu__link big-popup-menu__link" asp-page="/Events/Index">@Localizer["Foreign partners"]</a>
                                </li>
                                <li>
                                    <a class="big-menu__link big-popup-menu__link" asp-page="/Events/Index">@Localizer["Useful"]</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="main-menu-link big-menu__link" asp-page="/News/Index">@Localizer["News"]</a>
                        </li>
                        <li>
                            <a class="main-menu-link big-menu__link" asp-page="/Products/Index">@Localizer["Support"]</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <div class="mobile-content">
            <div class="site-info site-info__mobile-position">
                @Localizer["Foreign economic activity"]
                <div class="site-info__republic">@Localizer["of the republic of Dagestan"]</div>
            </div>
            <div class="mobile-search mobile-search_position">
                <form>
                    <input class="main-search-input mobile-search__input" type="text" name="search" placeholder="@Localizer["Search on the site"]" />
                    <button class="main-search-btn mobile-search__btn" type="submit">
                        <svg viewBox="0 0 24 24">
                            <use xlink:href="/img/sprite.svg#main-search"></use>
                        </svg>
                    </button>
                </form>
            </div>
            <div class="mobile-row">
                <partial name="_LanguagePartial" />
                <div class="personal-area personal-area_mobile-position">
                    <a class="personal-area__link" asp-area="Identity" asp-page="/Account/Manage/Index">@Localizer["Account"]</a>
                </div>
            </div>
            <nav class="mobile-menu mobile-menu_position">
                <ul class="mobile-menu__list">
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/Admin/FieldsOfActivity/Index">@Localizer["Industries"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/Exporters/Index">@Localizer["Exporters"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/Products/Index">@Localizer["Products & Services"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/Events/Index">@Localizer["Events"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/News/Index">@Localizer["News"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/Products/Index">@Localizer["Support"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/AboutPortal">@Localizer["About portal"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/AboutRegion">@Localizer["About region"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/ForeingPartners">@Localizer["Foreign partners"]</a>
                    </li>
                    <li class="mobile-menu__item">
                        <a class="main-menu-link mobile-menu__link" asp-page="/Useful">@Localizer["Useful"]</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="overlay"></div>



        <div class="content">
            @RenderBody()
        </div>

        <footer class="footer">
            <div class="container">
                <div class="upper-footer">
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="sponsor-item">
                            <img class="sponsor-item__img" src="~/img/sponsor-rospotrebnadzor.svg" />
                        </div>
                        <div class="sponsor-item">
                            <img class="sponsor-item__img" src="~/img/sponsor-my-dagestan.svg" />
                        </div>
                    }
                </div>
                <div class="lower-footer">
                    <nav>
                        <ul class="footer-menu">
                            <li class="footer-menu__item">
                                <a class="footer-menu__link" asp-page="/About">@Localizer["About portal"]</a>
                            </li>
                            <li class="footer-menu__item">
                                <a class="footer-menu__link" asp-page="/About">@Localizer["About region"]</a>
                            </li>
                            <li class="footer-menu__item">
                                <a class="footer-menu__link" asp-page="/Admin/FieldsOfActivity/Index">@Localizer["Industries"]</a>
                            </li>
                            <li class="footer-menu__item">
                                <a class="footer-menu__link" asp-page="/Exporters/Index">@Localizer["Exporters"]</a>
                            </li>
                            <li class="footer-menu__item">
                                <a class="footer-menu__link" asp-page="/Products/Index">@Localizer["Products & Services"]</a>
                            </li>
                            <li class="footer-menu__item">
                                <a class="footer-menu__link" asp-page="/Events/Index">@Localizer["Events"]</a>
                            </li>
                            <li class="footer-menu__item">
                                <a class="footer-menu__link" asp-page="/News/Index">@Localizer["News"]</a>
                            </li>
                        </ul>
                    </nav>
                    <div class="footer-logo">
                        <a class="main-page-link" asp-area="" asp-page="/Index">MADE IN <span>RD.</span></a>
                        <div class="footer-logo__info">
                            Портал внешнеэкономической деятельности
                            <div class="footer-logo__republic">Республики Дагестан</div>
                        </div>
                    </div>
                </div>
            </div>

        </footer>

        <div class="modal modalReg" style="display: none" id="modalReg">
            <button data-fancybox-close class="modal-close">
                <svg class="modal-close__icon"><use xlink:href="/img/sprite.svg#modal-close"></use></svg>
            </button>
            <div class="">
                <div class="modal-header">
                    <div class="modal-header__top">
                        <div class="d-flex justify-content-between align-items-baseline">
                            <h3 class="modal-header__title">Регистрация</h3>
                            <a href="#" class="link link_border modal-header__text">Войти в личный кабинет</a>
                        </div>
                    </div>
                    <div class="modal-header__bottom">
                        <h4 class="modal-header__subtitle">Информация о компании</h4>
                    </div>
                    <form class="for-validate modalreg-form">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Наименование компании</label>
                            <input type="text" class="form-control" id="formGroupExampleInput" autofocus="autofocus" placeholder="Введите наименование компании" required>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">ИНН</label>
                            <input type="number" class="form-control" placeholder="Введите ИНН компании" required>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">ОГРН или ОГРНИП</label>
                            <input type="number" class="form-control" placeholder="Введите ОГРН или ОГРНИП компании" min="100" max="999999" required>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Направление деятельности</label>
                            <select id="custom-select" required>
                                <option data-placeholder="true"></option>
                                <option value="value1">Value 1</option>
                                <option value="value2">Value 2</option>
                                <option value="value3">Value 3</option>
                            </select>
                        </div>
                        <div class="modal-header__center">
                            <h4 class="modal-header__subtitle">Данные контактного лица организации</h4>
                        </div>
                    
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Фамилия</label>
                            <input type="text" class="form-control required-input" id="hsr" placeholder="Введите фамилию">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Имя</label>
                            <input type="text" class="form-control required-input" id="heh" placeholder="Введите имя">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Отчество</label>
                            <input type="text" class="form-control" id="hgea" placeholder="Введите отчество">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Должность</label>
                            <input type="text" class="form-control" id="wgw" placeholder="Укажите вашу должность">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">E-mail</label>
                            <input type="email" name="email" class="form-control email-mask required-input" placeholder="Введите адрес электронной почты" required>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Телефон</label>
                            <input id="" type="tel" name="phone" class="form-control phone-mask required-input" placeholder="+7 (___) ___-__-__" required>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Пароль</label>
                            <input type="password" id="password-input" class="form-control password-input" placeholder="Придумайте пароль">
                            <a href="#" class="password-control" onclick="show_hide_password(event, 'password-input')">
                                <svg class="view"><use xlink:href="/img/sprite.svg#password-view"></use></svg>
                                <svg class="hidden"><use xlink:href="/img/sprite.svg#password-hidden"></use></svg>
                            </a>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Повторите пароль</label>
                            <input type="password" id="password-repeat-input" class="form-control password-input" placeholder="Повторите пароль снова">
                            <a href="#" class="password-control" onclick="show_hide_password(event, 'password-repeat-input')">
                                <svg class="view"><use xlink:href="/img/sprite.svg#password-view"></use></svg>
                                <svg class="hidden"><use xlink:href="/img/sprite.svg#password-hidden"></use></svg>
                            </a>
                        </div>
                    
                        <div class="form-group">
                            <div class="form-check">
                                <label class="form-check-label label_custom" for="invalidCheck">
                                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                                    <span class="checkmark checkmark-checkbox"></span>
                                    <p>Я ознакомился и согласен с <a class="link link_border" href="/policy" target="_blank">пользовательским соглашением</a></p>
                                </label>
                            </div>
                        </div>
                    
                        <div class="form-group d-flex align-items-sm-center flex-sm-row flex-column align-items-start">
                            <button class="btn btn-big btn-primary go__register mr-0 mr-sm-4" type="submit">Зарегистрироваться</button>
                            <a class="link link_border d-sm-none d-block mt-4" href="#">Войти в личный кабинет</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="~/js/jquery.fancybox.min.js" asp-append-version="true"></script>
        <script src="~/js/jquery.inputmask.min.js" asp-append-version="true"></script>
        <script src="~/js/slimselect.min.js" asp-append-version="true"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
