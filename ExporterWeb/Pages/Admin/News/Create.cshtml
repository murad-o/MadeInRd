@page
@model ExporterWeb.Pages.Admin.News.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewsItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="NewsItem.UserNameOwner" value="@User.Identity.Name"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsItem.Name" class="control-label"></label>
                <input asp-for="NewsItem.Name" class="form-control" />
                <span asp-validation-for="NewsItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsItem.Description" class="control-label"></label>
                <input asp-for="NewsItem.Description" class="form-control" />
                <span asp-validation-for="NewsItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsItem.Language" class="control-label"></label>
                <select asp-for="NewsItem.Language" class="form-control" asp-items="ViewBag.WhiteListLanguages"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
