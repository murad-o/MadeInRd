@inject CommonLocalizationService Localizer

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ExporterWeb</title>
	@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
	@*<link rel="stylesheet" href="~/css/site.css" />*@
	<link rel="stylesheet" href="~/css/reset.css" />
	<link rel="stylesheet" href="~/css/template.css" />
</head>
<body>
    <header>
		<div>
			<div class="upper-header">
				<div>
					<a class="nav-link text-dark" asp-area="" asp-page="/Index">MADE IN DAG.</a>
				</div>
				<div>
					Портал внешнеэкономической деятельности<br />
					Республики Дагестан
				</div>
				<partial name="_LoginPartial" />
				<vc:culture-switcher />
			</div>
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
				<div class="container">
					@* This button sets display:none in mobile mode *@
					@*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon">Toggle</span>
					</button>*@
					<div class="nav-items-container navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/About">@Localizer["About portal"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="#">@Localizer["About region"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="#">@Localizer["Branches"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Exporters/Index">@Localizer["Exporters"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">@Localizer["Products & Services"]</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="#">@Localizer["Support"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="#">@Localizer["Events"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="#">@Localizer["Foreign partners"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="#">@Localizer["Useful"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-page="/Admin/News/Index" asp-route-language="@ExporterWeb.Helpers.Languages.DefaultLanguage">@Localizer["News"]</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ExporterWeb - <a asp-area="" asp-page="/Privacy">@Localizer["Privacy"]</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
