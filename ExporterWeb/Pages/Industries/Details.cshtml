@page
@using ExporterWeb.Helpers
@model ExporterWeb.Pages.Industries.DetailsModel

<div class="page-header">
    <div class="container">
        <div class="page-header__content">
            <nav class="breadcrumbs" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Index">Главная</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a asp-page="./Index">Отрасли экспорта</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.IndustryTranslation.Name</li>
                </ol>
            </nav>
            <h1 class="page-header__content-title page-header__content-title_small">@Model.IndustryTranslation.Name</h1>
        </div>
    </div>
    <img src="@Model.IndustryTranslation.LogoPath()" alt="@Model.IndustryTranslation.Name">
</div>
<div class="container">
    <div class="industries-text">
        @Html.Raw(Model.IndustryTranslation.Description)
    </div>
</div>