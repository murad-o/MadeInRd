@page
@inject ExporterWeb.Helpers.Services.CommonLocalizationService Localizer
@model ForgotPasswordModel

<main class="primary-content" role="main">

    <div class="container">

        <div class="account-card">
            <div class="account-header">
                <h1 class="account-card__title">@Localizer["Password recovery"]</h1>
            </div>

            <div class="account-body">
                <form method="post" class="for-validate account-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control email-mask required-input" placeholder=@Localizer["Enter your email"]>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="btn btn-big btn-primary account-card__btn-primary go__register">
                        <button class="btn btn-big btn-primary account-card__btn-primary go__register" type="submit">@Localizer["Reset"]</button>
                        <a class="link link_border link_border-margin" href="/">@Localizer["Back"]</a>
                    </div>
                </form>
            </div>

        </div>

    </div>

</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
