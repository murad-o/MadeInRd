                <form class="for-validate modalreg-form">
                    <div class="form-group">
                        <label for="formGroupExampleInput">Наименование компании</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Введите наименование компании" required>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">ИНН</label>
                        <input type="text" class="form-control" id="wgw" placeholder="Введите ИНН компании" required>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">ОГРН или ОГРНИП</label>
                        <input type="text" class="form-control" id="wgwg" placeholder="Введите ОГРН или ОГРНИП компании" required>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Направление деятельности</label>
                        <select id="inputState" class="form-control">
                            <option selected>Выберите отрасль</option>
                            <option>...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="modal-header__center">
                        <h4 class="modal-header__subtitle">Данные контактного лица организации</h4>
                    </div>

                    <div class="form-group">
                        <label for="formGroupExampleInput2">Фамилия</label>
                        <input type="text" class="form-control required-input" id="hsr" placeholder="Введите фамилию" required>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Имя</label>
                        <input type="text" class="form-control required-input" id="heh" placeholder="Введите имя" required>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Отчество</label>
                        <input type="text" class="form-control" id="hgea" placeholder="Введите отчество">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Должность</label>
                        <input type="text" class="form-control" id="wgw" placeholder="Укажите вашу должность">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">E-mail</label>
                        <input type="email" name="email" class="form-control email-mask required-input" placeholder="Введите адрес электронной почты" required>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Телефон</label>
                        <input id="" type="tel" name="phone" class="form-control phone-mask required-input" id="wfw" placeholder="+7 (___) ___-__-__" required>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Пароль</label>
                        <input type="password" id="password-input" class="form-control password-input" id="arh" placeholder="Придумайте пароль">
                        <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Повторите пароль</label>
                        <input type="password" id="password-input" class="form-control password-input" id="wgaw" placeholder="Повторите пароль снова">
