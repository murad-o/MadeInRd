<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UserSecretsId>7f33acfa-d777-41be-857e-6f6d4a582394</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
