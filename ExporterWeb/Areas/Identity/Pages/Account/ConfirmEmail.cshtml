@page
@model ConfirmEmailModel
@inject ExporterWeb.Helpers.Services.CommonLocalizationService Localizer
@{
    ViewData["Title"] = "Email confirmed";
}

<main role="main" class="primary-content">

    <div class="container">

        <div class="account-card">
            <h1 class="account-card__title">@Localizer["Registration"]</h1>

            <div class="register-text">
                <p>@Localizer["Thanks for registration!"]</p>
                <br>
                <p>@Localizer["Now you can log in to your account and fill information about your company"]</p>
            </div>

            <div class="d-flex align-items-baseline flex-wrap">
                <a asp-page="Login" class="btn btn-big btn-primary mr-4">@Localizer["Log in"]</a>
                <a class="link link_border mt-3" href="/">@Localizer["Back to home page"]</a>
            </div>
        </div>

    </div>

</main>