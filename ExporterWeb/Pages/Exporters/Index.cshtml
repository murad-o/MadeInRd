@page
@using Helpers
@model ExporterWeb.Pages.Exporters.IndexModel
@inject Microsoft.AspNetCore.Identity.SignInManager<ExporterWeb.Models.User> SignInManager
@inject IStringLocalizer<IndexModel> Localizer
@inject CommonLocalizationService CommonLocalizer

@{
    ViewData["Title"] = CommonLocalizer["Exporters"];
    var exporters = Model.LanguageExporters;
    <link rel="stylesheet" href="~/css/items.css"/>
}

<div class="container">
    <nav class="navigation-chain">
        <ul class="navigation-chain__list">
            <li class="navigation-chain__item">
                <a href="" class="navigation-chain__link">@CommonLocalizer["Home"]</a>
            </li>
            <li class="navigation-chain__item">
                <span class="navigation-chain__point"></span>
            </li>
            <li class="navigation-chain__item">
                <a href="" class="navigation-chain__link">@CommonLocalizer["Exporters"]</a>
            </li>
        </ul>
    </nav>
    <div class="items-container">
        <aside class="industries">
            <h2 class="aside-title">@CommonLocalizer["Industries"]</h2>
            <div class="industries-mobile-header">
                <div class="industries-mobile-header__title">Фильтр по отраслям</div>
                <button class="industries-mobile-header__close-btn">
                    <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M35 5H5V35H35V5ZM28.3333 25.9833L25.9833 28.3333L20 22.35L14.0167 28.3333L11.6667 25.9833L17.65 20L11.6667 14.0167L14.0167 11.6667L20 17.65L25.9833 11.6667L28.3333 14.0167L22.35 20L28.3333 25.9833Z" fill="black" />
                    </svg>
                </button>
            </div>
        </aside>
        <div class="items-overlay"></div>
        <main class="items items_position">
            <h2 class="items-title">@CommonLocalizer["Exporters"]</h2>
            <div class="items-search items-search_position">
                <form method="get">
                    <input class="items-search__input" type="text" name="search" placeholder="@CommonLocalizer["Search on exporters"]">
                    <button class="items-search__btn" type="submit">
                        <svg class="items-search__icon" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8.9 4C6.2021 4 4 6.2021 4 8.9C4 11.5979 6.2021 13.8 8.9 13.8C10.1236 13.8 11.2415 13.3436 12.102 12.5969L12.4 12.8949V13.8L16.6 18L18 16.6L13.8 12.4H12.8949L12.5969 12.102C13.3436 11.2415 13.8 10.1236 13.8 8.9C13.8 6.2021 11.5979 4 8.9 4ZM8.9 5.4C10.8413 5.4 12.4 6.95871 12.4 8.9C12.4 10.8413 10.8413 12.4 8.9 12.4C6.95871 12.4 5.4 10.8413 5.4 8.9C5.4 6.95871 6.95871 5.4 8.9 5.4Z" fill="#9E9E9E" />
                        </svg>
                    </button>
                </form>
            </div>
            <div class="industry-filters industry-filters_position">
                <button class="industry-filters__btn" type="submit">
                    <svg class="industry-filters__icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.5 2.5H17.5V4.16667H2.5V2.5ZM4.16667 5.83333L8.33333 10.8333V17.5H11.6667V10.8333L15.8333 5.83333H4.16667Z" fill="black" />
                    </svg>
                    Фильтр по отраслям
                </button>
            </div>
            <div class="items__row">
                @foreach (var exporter in Model.FakeExporters)
                {
                    <div class="items-column items-column_position">
                        <div class="items-column__item">
                            <div class="items-column-image-block">
                                <a asp-page="/Exporters/Details" asp-route-id="@exporter.CommonExporterId" class="items-column-image-block__link">
                                    <img class="items-column-image-block__image" src="@exporter.LogoPath()" />
                                </a>
                            </div>
                            <div class="items-column-body">
                                <div class="items-column-body__name">@exporter.Name</div>
                                <a asp-page="/Exporters/Details" asp-route-id="@exporter.CommonExporterId" class="items-column-body__details">@CommonLocalizer["More details"]</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </main>
    </div>
</div>
<script src="~/js/items.js"></script>
