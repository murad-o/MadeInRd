@page
@using ExporterWeb.Helpers
@model ExporterWeb.Pages.Admin.Industries.Edit

@{
    Layout = "_AdminLayout";
}

<div class="container-fluid page__container">

    <div class="page__heading d-flex align-items-center">
        <div class="flex">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Главная</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Отрасли</li>
                </ol>
            </nav>
            <h1 class="m-0">Редактирование отрасли
                <img data-toggle="tooltip" data-placement="top" title="@Languages.ToRussian(Model.Industry.Language)"
                     class="language-switcher__flag" src="/img/flags/@(Model.Industry.Language).svg" alt="Флаг"/>
            </h1>
        </div>
        <div class="d-flex">
            @if (Model.Industry.Language != Languages.DefaultLanguage)
            {
                <form method="post"
                      asp-page="Index"
                      asp-page-handler="DeleteTranslation"
                      onsubmit="return confirm('Вы уверены что хотите удалить перевод этой отрасли?')">
                    <input type="hidden" name="id" value="@Model.Industry.Id"/>
                    <button class="btn btn-danger mr-2" type="submit">Удалить перевод</button>
                </form>
            }
           
        </div>
    </div>

    <div class="card card-form">
        <div class="row no-gutters">
            <div class="col-lg-12 card-form__body card-body">

                @if (Model.Industry.Image is {})
                {
                    <div id="current-image-row" class="form-group mb-2">
                        <div class="control-label mb-2">Изображение отрасли</div>
                        <img src="@Model.Industry.LogoPath()">

                        <form class="mt-1" method="post" id="delete-image-form">
                            <div class="form-group mb-4">
                                <button id="del-image-button" class="btn btn-danger" type="submit" asp-page-handler="DeleteImage">Удалить текущее изображение</button>
                            </div>
                        </form>
                    </div>

                    <style>
                        .upload-img-block {
                            display: none;
                        }
                    </style>
                }

                <form method="post" enctype="multipart/form-data">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Industry.Id">
                    <input type="hidden" asp-for="Industry.IndustryId">
                    <input type="hidden" asp-for="Industry.Language">
                    <input type="hidden" asp-for="Industry.Image" value="@Model.Industry.Image"/>

                    <div class="form-group mb-4 upload-img-block">
                        <label class="control-label">Загрузите изображение</label>
                        <input class="form-control-file" id="file-input" type="file" name="Image" accept=".jpg,.png,.jpeg" placeholder="Выбрать файл" />
                        <small id="passwordHelpInline" class="text-muted">Допустимые форматы: jpg, jpeg, png</small>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Industry.Name" class="control-label">Название</label>
                        <input asp-for="Industry.Name" class="form-control"/>
                        <span asp-validation-for="Industry.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Industry.Description" class="control-label">Описание</label>
                        <textarea asp-for="Industry.Description" id="industry-description"></textarea>
                        <span asp-validation-for="Industry.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-0">
                        <input type="submit" value="Сохранить" class="btn btn-primary"/>
                    </div>
                </form>

            </div>

        </div>
    </div>

</div>


@section Scripts {
    <script src="~/js/custom.js"></script>
    <script src="//cdn.ckeditor.com/4.15.1/full/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'industry-description', {
            filebrowserUploadUrl: '/api/upload/upload-industry-image'
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}