<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/template.css" />
    <link rel="stylesheet" href="~/fonts/Golos text/golostext.css" />
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/pagination.css" />
</head> 
<body>
    <div>
        <header class="header">
            <div class="container">
                <div class="header__search-body">
                    <form>
                        <input type="text" class="header__search-input" placeholder="Искать на сайте">
                        <button type="submit" class="header__search-btn">Найти</button>
                    </form>
                </div>
                <div class="header__row">
                    <div class="header__logo">
                        <a class="main-page-link" asp-area="" asp-page="/Index">MADE IN <span>RD.</span></a>
                    </div>
                    <div class="header__burger">
                        <span></span>
                    </div>
                    <div class="header__body">
                        <div class="mobile-search">
                            <form action="">
                                <input class="mobile-search__input" type="text" placeholder="Поиск">
                                <button class="mobile-search__btn" type="submit">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                        <div class="header__body-top">
                            <button type="button" class="header__show-search-body">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                            <a class="header__account-link" asp-page="/Account/Manage/Index">Личный кабинет</a>
                            <partial name="_LanguagePartial" />
                        </div>
                        <nav class="header__menu">
                            <partial name="_NavLinksPartial" />
                        </nav>
                    </div>
                </div>
                
            </div>

        </header>


        @*<div class="temporary-content"></div>*@

        <div class="wrapper">
            @RenderBody()
        </div>

