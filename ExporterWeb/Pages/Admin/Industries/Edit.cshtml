@page
@using ExporterWeb.Helpers
@model ExporterWeb.Pages.Admin.Industries.Edit

@{
    Layout = "_AdminLayout";
}

<div class="container-fluid page__container">

    <div class="page__heading d-flex align-items-center">
        <div class="flex">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="#">Главная</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Отрасли</li>
                </ol>
            </nav>
            <h1 class="m-0">Редактирвание отрасли</h1>
        </div>
        <div class="d-flex">
            @if (Model.Industry.Language != Languages.DefaultLanguage)
            {
                <form method="post"
                      asp-page="Index"
                      asp-page-handler="DeleteTranslation"
                      onsubmit="return confirm('Вы уверены что хотите удалить перевод этой отрасли?')">
                    <input type="hidden" name="id" value="@Model.Industry.Id"/>
                    <button class="btn btn-danger mr-2" type="submit">Удалить перевод</button>
                </form>
            }
           
        </div>
    </div>

    <div class="card card-form">
        <div class="row no-gutters">
            <div class="col-lg-12 card-form__body card-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Industry.Id">
                    <input type="hidden" asp-for="Industry.IndustryId">
                    <input type="hidden" asp-for="Industry.Language">
                    <div class="form-group">
                        <label asp-for="Industry.Name" class="control-label">Название</label>
                        <input asp-for="Industry.Name" class="form-control" />
                        <span asp-validation-for="Industry.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Industry.Description" class="control-label">Описание</label>
                        <textarea asp-for="Industry.Description" id="industry-description"></textarea>
                        <span asp-validation-for="Industry.Description" class="text-danger"></span>
                    </div>
                    <div>
                        <img src="@Model.Industry.LogoPath()" id="edit-img">
                    </div>
                    <div class="form-group mt-2"> 
                            <label>Загрузить изображение</label> 
                            <input class="form-control-file" type="file" name="Image" />
                        </div>
                    @* @if (@Model.Industry.Image is {})
                    {
                        <div class="form-group">
                            <button class="btn btn-danger" id="test" type="submit" asp-page-handler="DeleteImage">Удалить текущее изображение</button>
                        </div>
                    }
                    else
                    {
                        <div class="form-group mt-2">
                            <label>Загрузить изображение</label>
                            <input class="form-control-file" type="file" name="Image" />
                        </div>
                    } *@
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                </form>
                @{
                    if (Model.Industry.Image is {})
                    {
                        <form method="post" id="delete-image-form">
                            <div class="form-group">
                                <button class="btn btn-danger" type="submit" asp-page-handler="DeleteImage">Удалить текущее изображение</button>
                            </div>
                        </form>
                    }
                    @* else 
                    { 
                        <div class="form-group mt-2"> 
                            <label>Загрузить изображение</label> 
                            <input class="form-control-file" type="file" name="Image" />
                        </div>
                    } *@
                } 
            </div>
        </div>
    </div>

</div>
    


@section Scripts {
    <script src="//cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'industry-description', {
            filebrowserUploadUrl: '/api/upload/upload-industry-image'
        });
    </script>
    <script src="/js/deleteImage.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}