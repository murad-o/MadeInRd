@inject CommonLocalizationService Localizer

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ExporterWeb</title>
	@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
	@*<link rel="stylesheet" href="~/css/site.css" />*@
	<link rel="stylesheet" href="~/css/reset.css" />
	<link rel="stylesheet" href="~/css/template.css" />
	<link rel="stylesheet" href="~/fonts/Golos text/golostext.css" />
</head>
<body>
    <header>
		<div class="grid">
			<div class="upper-header">
				<div>
					<a class="main-page-link" asp-area="" asp-page="/Index">MADE IN <span class="blue-highlighted">RD.</span></a>
				</div>
				<div class="extra-header-description">
					Портал внешнеэкономической деятельности<br />
					Республики Дагестан
				</div>
				<partial name="_LoginPartial" />
				<vc:culture-switcher />
			</div>
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
				@* This button sets display:none in mobile mode *@
				@*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon">Toggle</span>
				</button>*@
				<div class="nav-items-container navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<partial name="_NavLinksPartial" />
				</div>
			</nav>
		</div>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
		<div class="upper-footer">
			@for (int i = 0; i < 2; i++)
			{
				<div class="sponsor-item">
					<img src="~/img/sponsor-rospotrebnadzor.png" />
					<span></span>
				</div>
				<div class="sponsor-item">
					<img src="~/img/sponsor-my-dagestan.svg" />
					<span></span>
				</div>
			}
		</div>
		<div class="lower-footer">
			<partial name="_NavLinksPartial" />
			<div>
				<p>MADE IN RD.</p>
				<p>
					Портал внешнеэкономической деятельности<br/>
					Республики Дагестан
				</p>
			</div>
		</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
