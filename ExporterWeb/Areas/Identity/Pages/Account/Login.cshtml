@page
@using ExporterWeb.Helpers.Services
@model LoginModel
@inject CommonLocalizationService Localizer;

@{
    ViewData["Title"] = "Log in";
}

<main class="primary-content" role="main">
    <div class="container">
        
        <div class="account-card">
            <div class="account-header">
                <div class="account-header__top">
                    <div class="d-flex justify-content-between align-items-baseline">
                        <h1 class="page__title page__title-margin">@Localizer["Log in"]</h1>
                        <a class="link link_border account-header__text" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Registration"]</a>
                    </div>
                </div>
                <form id="account" class="account-form account-login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control email-mask required-input" placeholder="@Localizer["Enter your email"]" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="@Localizer["Enter password"]" />
                        <span asp-validation-for="Input.Password" class="form-control password-input"></span>
                        <small class="password-control" onclick="show_hide_password(event, 'Input_Password')">
                            <svg class="view"><use xlink:href="/img/sprite.svg#password-view"></use></svg>
                            <svg class="hidden"><use xlink:href="/img/sprite.svg#password-hidden"></use></svg>
                        </small>
                    </div>
                    <div class="form-group d-flex flex-sm-row flex-column flex-wrap align-items-baseline mb-0">
                        <button class="btn btn-big btn-primary account-card__btn-primary go__login" type="submit">Войти</button>
                        <a class="link link_border account-bottom__text d-block d-sm-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Registration"]</a>
                        <a class="link link_border" asp-page="./ForgotPassword">@Localizer["Forgot password?"]</a>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
