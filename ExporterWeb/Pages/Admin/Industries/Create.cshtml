@page
@using ExporterWeb.Helpers
@model ExporterWeb.Pages.Admin.Industries.Create

<h1>Industry</h1>

<h4>Industry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IndustryTranslation.Name" class="control-label"></label>
                <input asp-for="IndustryTranslation.Name" class="form-control" />
                <span asp-validation-for="IndustryTranslation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndustryTranslation.Description" class="control-label"></label>
                <input asp-for="IndustryTranslation.Description" class="form-control" />
                <span asp-validation-for="IndustryTranslation.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndustryTranslation.Language" class="control-label"></label>
                <select asp-for="IndustryTranslation.Language" class="form-control" asp-items="new SelectList(Languages.WhiteList)"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

