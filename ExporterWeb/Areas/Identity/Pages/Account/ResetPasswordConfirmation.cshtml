@page
@inject ExporterWeb.Helpers.Services.CommonLocalizationService Localizer
@model ResetPasswordConfirmationModel

<main role="main" class="primary-content">

    <div class="container">

        <div class="account-card">
            <h1 class="account-card__title">@Localizer["Password recovery"]</h1>

            <div class="register-text">
                <p>@Localizer["Your password has been reset. Now you can log in."]</p>
            </div>

            <div class="d-flex align-items-baseline flex-wrap">
                <a class="btn btn-primary btn-big mr-3" asp-page="Login">@Localizer["Log in"]</a>
                <a class="link link_border mt-3" href="/">@Localizer["Back to home page"]</a>
            </div>
        </div>

    </div>

</main>
